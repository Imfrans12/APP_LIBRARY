<div class="container-fluid">
  <div class="row">
    <%= form_for(@ms_books) do |ms_book| %>


        <div class="form-group">
          <%= ms_book.label :Name %>
          <%= ms_book.text_field :name, class:'form-control', type: 'text', placeholder: '',required: true %>
        </div>

        <div class="form-group">
          <%= ms_book.label :PublisherId %>
          <%= ms_book.text_field :ms_publisher_id, class:'form-control', type: 'number', placeholder: '',required: true %>
        </div>


        <%= ms_book.submit :Save, class:'btn btn-success' %>

    <% end %>
  </div>
</div>
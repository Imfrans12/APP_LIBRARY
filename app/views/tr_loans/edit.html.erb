<div class="container-fluid">
  <div class="row">
    <%= form_for(@tr_loans) do |tr_loan| %>


        <div class="form-group">
          <%= tr_loan.label :MemberName %>
          <%= tr_loan.text_field :member_name, class:'form-control', type: 'text', placeholder: '',required: true %>
        </div>

        <div class="form-group">
          <%= tr_loan.label :MemberPhone %>
          <%= tr_loan.text_field :member_phone, class:'form-control', type: 'number', placeholder: '',required: true %>
        </div>

        <div class="form-group">
          <%= tr_loan.label :MemberEmail %>
          <%= tr_loan.text_field :member_email, class:'form-control', type: 'text', placeholder: '',required: true %>
        </div>

        <div class="form-group">
          <%= tr_loan.label :MsBookId %>
          <%= tr_loan.text_field :ms_book_id, class:'form-control', type: 'number', placeholder: '',required: true %>
        </div>

        <%= tr_loan.submit :Save, class:'btn btn-success' %>

    <% end %>
  </div>
</div>
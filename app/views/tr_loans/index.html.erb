<div style="float: right">
 <%= link_to 'Add Data', new_tr_loan_path, class: 'btn btn-success' %>
 </div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Member Name</th>
      <th scope="col">Member Phone</th>
      <th scope="col">Member Email</th>
      <th scope="col">Ms_book_id</th>
      <th scope="col" width="auto">Action</th>
    </tr>
  </thead>
<% @tr_loans.each do |tr_loan|%>
<tbody>
<tr>
      <th scope="row"><%= tr_loan.id%></th>
      <td> <%= tr_loan.member_name %> </td>
      <td> <%= tr_loan.member_phone %> </td>
      <td> <%= tr_loan.member_email %> </td>
      <td> <%= tr_loan.ms_book_id %> </td>
     <td class="text-center">
     		<%= link_to 'Delete',tr_loan_path(tr_loan), method: :delete, data: {confirm: 'Delete Data ? '}, class: 'btn btn-danger' %>
              <%= link_to 'Detail', tr_loan_path(tr_loan), class: 'btn btn-light' %>
              <%= link_to 'Edit', edit_tr_loan_path(tr_loan), class: 'btn btn-primary' %>
              
            </td>
      <% end %>
</tbody>
</tr>

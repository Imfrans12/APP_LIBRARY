
<div class="container-fluid">
  <div class="row">
    <%= form_for(@ms_publishers) do |ms_publisher| %>


        <div class="form-group">
          <%= ms_publisher.label :Name %>
          <%= ms_publisher.text_field :name, class:'form-control', type: 'text', placeholder: '',required: true %>
        </div>

        <div class="form-group">
          <%= ms_publisher.label :Phone %>
          <%= ms_publisher.text_field :phone, class:'form-control', type: 'number', placeholder: '',required: true %>
        </div>
        <div class="form-group">
          <%= ms_publisher.label :Address %>
          <%= ms_publisher.text_field :address, class:'form-control', type: 'text', placeholder: '',required: true %>
        </div>



        <%= ms_publisher.submit :Save, class:'btn btn-success' %>

    <% end %>
  </div>
</div>